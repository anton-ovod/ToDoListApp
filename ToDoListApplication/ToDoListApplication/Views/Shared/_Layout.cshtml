<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToDoListApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ToDoListApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar justify-content-center navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="d-flex justify-content-center">
                <a class="display-3 mx-0 text-decoration-none text-black " asp-area="" asp-controller="Home" asp-action="Index">ToDoListApplication</a>
                
            </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="p-2 d-flex justify-content-center flex-column align-items-center gap-3">
            @RenderBody()
        </main>
    </div>

    <footer class="container border-top footer fs-4 position-relative">
        <div class="d-flex justify-content-center text-muted ">
            &copy; Anton Ovod - 2024 - ToDoListApplication
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
